@page
@model IndexModel
@{
    ViewData["Title"] = "首页";
    Layout = "_Layout";
}

<h1 class="col-12">网上冲浪指南</h1>
<div class="divide wide-divide"></div>
<div class="col-12 grid articles">
    @foreach (var article in Model.Articles)
    {
        <div class="col-12 article">
            <h2><a href="@Url.Page("/Article",new {id = article.Id})" target="_blank">@article.Title</a></h2>
            <span class="weak">@article.LastEdited.ToString("yyyy/MM/dd")</span>
            <p class="weak summary">
                <markdown>@Html.Raw(article.Summary)</markdown>
            </p>
        </div>
    }
</div>

@section Sidebar {
    <div side-group title="友情链接">
        <a href="https://rocka.me" target="_blank">https://rocka.me</a>
        <a href="http://blog.neatline.cn" target="_blank">http://blog.neatline.cn</a>
    </div>
    @*@Component.InvokeAsync("SideGroup", new { title="测试", content="测试"})*@
}

@section Scripts {
    <script>window.__pageModule = 'article-list'</script>
    <script src="~/dist/article.js"></script>
}
