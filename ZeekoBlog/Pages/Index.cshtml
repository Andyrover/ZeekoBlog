@page
@model IndexModel
@{
    ViewData["Title"] = "首页";
    Layout = "_Layout";
}

<div class="grid-center">
    <div class="col-7_md-12_sm grid">
        <h1 class="col-12">网上冲浪指南</h1>
        <div class="divide wide-divide"></div>
        <div class="col-12 grid articles">
            @foreach (var article in Model.Articles)
            {
                <div class="col-12 article">
                    <h2><a href="@Url.Page("/Article",new {id = article.Id})" target="_blank">@article.Title</a></h2>
                    <span class="weak">@article.LastEdited.ToString("yyyy/MM/dd")</span>
                    <p class="weak summary">@article.Summary</p>
                </div>
            }
        </div>
    </div>
    <div class="col-3_md-12_sm grid-column">
        <div class="col-12 side-card">
            <div class="side-title">
                <h3>友情链接</h3>
            </div>
            <div class="divide"></div>
            <div class="side-body">
                <a href="https://rocka.me" target="_blank">https://rocka.me</a>
            </div>
        </div>
    </div>
</div>
