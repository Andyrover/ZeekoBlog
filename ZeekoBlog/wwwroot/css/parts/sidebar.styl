sidebar-part() {
    @media screen and (min-width: 768px) {
        .side-card {
            margin-left: 3em;
        }
    }

    @media screen and (max-width: 48em) {
        .side-container {
            position: fixed;
            width: 100vw;
            height: 0;
            background: white;
            z-index: 10;
            overflow: auto;
            opacity: 0;
        }

        .toc-list li {
            margin: 2em 0;
        }
    }

    .side-title > h3 {
        margin-bottom: 0.2em;
    }

    .side-body {
        margin-top: 0.2em;
        display: flex;
        flex-flow: column nowrap;
    }

    .toc-list {
        list-style: none;
        padding: 0;
        font-size: 0.9em;

        li {
            margin: 0.5em 0;
        }
    }

    .toc-H3 {
        padding-left: 1em;
    }

    .toc-H4 {
        padding-left: 2em;
    }

    .toc-H5 {
        padding-left: 3em;
    }
}
