{
    "schemaVersion": 1,
    "dockerfileLines": [
        "FROM microsoft/aspnetcore-build AS builder",
        "WORKDIR /source",
        "COPY ./src/ZeekoBlog/ZeekoBlog/*.csproj ./ZeekoBlog/",
        "COPY ./src/ZeekoBlog/ZeekoBlog/*.json ./ZeekoBlog/",
        "COPY ./src/ZeekoBlog/Nuget.Config .",
        "RUN cd ZeekoBlog && dotnet restore --configfile ../Nuget.Config && npm install && npm cache clean --force",
        "COPY ./src .",
        "RUN cd ZeekoBlog && npm run build && dotnet publish -c Release -o /app/",
        "FROM microsoft/aspnetcore:2.0.5",
        "WORKDIR /app",
        "COPY --from=builder /app .",
        "ENTRYPOINT [\"dotnet\", \"TooYoung.dll\"]"
    ]
}
